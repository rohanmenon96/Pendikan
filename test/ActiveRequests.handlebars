<html>

<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
	 crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="public/css/site.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP"
	 crossorigin="anonymous">
	<title>
		Active Requests Page
	</title>
</head>

<body>
	<main>
		<div id="wrapper">
			<!-- Navigation -->
			<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
				</div>
				<!-- /.navbar-header -->

				<!-- /.navbar-top-links -->
				<!-- 左边导航 -->
				<div class="navbar-default sidebar" role="navigation">
					<div class="sidebar-nav navbar-collapse">
						<ul class="nav" id="side-menu">
							<li>
								<a href="/dashboard"> Go Back to Dashboard</a>
							</li>
						</ul>
					</div>
					<!-- /.sidebar-collapse -->
				</div>
			</nav>
		</div>

		<div id="page-wrapper">
			<h1 class="activeRequest-h1">Active Requests</h1>

			<div class="row">
				<div class="col-lg-12">
					{{#if hasRequests}}
					<ul>
						{{#each requests}}
						<li>
							{{ topic }}
							<form action="/viewRequestAsStudent" method="POST">
								<button type="submit" id="viewRequest" name="viewRequest" value="{{this._id}}">View Request</button>
							</form>
						</li>
						{{/each}}
					</ul>
					{{/if}}
				</div>


			</div>

		</div>
		<!-- /#page-wrapper -->
		</div>



		{{!-- <a href="/dashboard" method="get">Go Back to Dashboard</a> --}}
</body>

</html>
