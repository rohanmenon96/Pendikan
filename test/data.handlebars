<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP"
        crossorigin="anonymous">
    <link rel='stylesheet' href='public/css/bootstrap.css' />
    <!-- Custom Fonts -->
    <link href="public/css/font-awesome.css" rel="stylesheet" type="text/css">

    <link rel="stylesheet" type="text/css" href="public/css/site.css">
    <title>
        Dashboard
    </title>
</head>

<body>
    <h1>
        <div class="title">Dashboard
        </div>
    </h1>
    <br><br>
    <main>
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                </div>
                <!-- /.navbar-header -->

                <!-- /.navbar-top-links -->
                <!-- 左边导航 -->
                <div class="navbar-default sidebar" role="navigation"><br><br><br><br><br><br><br>
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a href="/dashboard"> Dashboard</a>
                            </li>
                            <li>
                                <a href="/viewActiveRequests"> View My Student Requests</a>
                            </li>

                            <li>
                                <a href="/addCourseForm"> Add Course</a>
                            </li>
                            <li>
                                <a href="/removeCourseForm">Remove Course</a>
                            </li>
                            <li>
                                <a href="/becomeATutor"> Become A Tutor</a>
                            </li>
                            <li>
                                <a href="/removeCourseFormTut">Remove Course as Tutor</a>
                            </li>
                            <li>
                                <a href="/logout"> Log Out</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>
                <!-- /.navbar-static-side -->
            </nav>
            {{!-- Course Loading --}}
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="page-header">Panels</h2>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>

                <div class="row">
                    {{#each courses}} {{!--
                    <div class="col-lg-4"> --}}
                        <div class="panel panel-default" style="width:30%;float:left;margin-right:20px">
                            <div class="panel-heading">
                                {{ this }}
                            </div>
                            <div class="panel-body">
                                <p>Enrolled As: Student</p>
                            </div>
                            <div class="panel-footer">
                                <form action="/addARequest" method="get">
                                    <input type="submit" value="Add Request">
                                </form>
                                <form action="/viewActiveRequests" method="get">
                                    <input type="submit" value="View My Student Requests">
                                </form>
                            </div>
                        </div>
                        {{!--
                    </div> --}} {{/each}} {{!--
                    <div class="col-lg-4"> --}} {{#if isTutor}} {{#each tutorAt}}
                        <div class="panel panel-danger" style="width:30%;float:left;margin-right:20px">
                            <div class="panel-heading">
                                {{ this }}
                            </div>
                            <div class="panel-body">
                                <p>Enrolled As: Tutor</p>
                            </div>
                            <div class="panel-footer">
                                <form action="/viewTutorRequests" method="post">
                                    <input type="hidden" name="course" value={{this}}>
                                    <input type="submit" value="View Tutor Requests">
                                </form>
                                <form action="/myAcceptedRequests" method="post">
                                    <input type="submit" value="Active Requests">
                                </form>
                            </div>
                        </div>
                        {{!--
                    </div> --}}
                    <!-- /.col-lg-4 -->
                    {{/each}} {{/if}}
                </div>
                <br><br> {{#if hasErrors}}
                <ul class="error-list">
                    {{#each errors}}
                    <li class="error">
                        {{ this }}
                    </li>
                    {{/each}}
                </ul>
                {{/if}}

            </div>
            <!-- /#page-wrapper -->
        </div>

    </main>


</body>

</html>